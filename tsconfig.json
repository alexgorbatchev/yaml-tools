{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "NodeNext",
    "pretty": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "removeComments": false
  },
  "exclude": ["**/node_modules", "**/tmp", "**/dist"]
}
